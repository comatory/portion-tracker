{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "modules": true,
            "experimentalObjectRestSpread": true
        }
    },
    "plugins": [
        "react"
    ],
    "extends": [
        "standard",
        "plugin:react/recommended"
    ],
    "rules": {
        "space-before-function-paren": 0,
        "comma-dangle": ["error", "always-multiline"],
        "operator-linebreak": ["error", "after"],
        "react/prop-types": 0,
        "react/no-deprecated": 0
    },
    "globals": { "fetch": false }
}